<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/view_album_info_item_layout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/view_album_info_item_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_zone_img_big"
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="7">
                <TextView
                    android:id="@+id/view_album_info_item_title"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1.5"/>
                <TextView
                    android:id="@+id/view_album_info_item_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/view_album_info_item_footnote"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:drawableLeft="@mipmap/finding_album_img"
                    android:drawablePadding="2dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/ic_more"/>

        </LinearLayout>
        <View
            android:id="@+id/view_album_info_item_line"
            android:layout_width="match_parent"
            android:background="@color/divide_line"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"/>


    </LinearLayout>


</LinearLayout>