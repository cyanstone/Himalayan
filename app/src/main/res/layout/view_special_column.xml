<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/tab_background"
              android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/view_special_column_title"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nav_text_Checked"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/finding_title_tag"
            android:drawablePadding="4dp"
            android:text="@string/specialColumn"/>
        <TextView
            android:id="@+id/view_special_column_more"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="8dp"
            android:drawableRight="@drawable/discovery_hot_recommend_drawable"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:textColor="@drawable/text_pressed_unpressed"
            android:text="@string/text_more"/>
    </RelativeLayout>

    <com.my.cyanstone.himalayan.ui.view.AlbumInfoListItemView
        android:id="@+id/view_special_column_item1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="@dimen/special_colums_item_margin_bottom">
    </com.my.cyanstone.himalayan.ui.view.AlbumInfoListItemView>

    <com.my.cyanstone.himalayan.ui.view.AlbumInfoListItemView
        android:id="@+id/view_special_column_item2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="@dimen/special_colums_item_margin_bottom"
        app:divideLineGone="true">
    </com.my.cyanstone.himalayan.ui.view.AlbumInfoListItemView>

</LinearLayout>