<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="tab_radio_button">
        <item name="android:textColor">@drawable/tab_text</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="NavTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:width">0dp</item>
        <item name="android:textColor">@drawable/nav_text</item>
    </style>

    <style name="NavLayout">
        <item name="android:background">@color/tab_background</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="NavBarText">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:width">0dp</item>
        <item name="android:textColor">@drawable/nav_text</item>
    </style>

    <style name="cursorImageView">
        <item name="android:scaleType">matrix</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:height">5dp</item>
        <item name="android:src">@drawable/cursor</item>
    </style>

</resources>
